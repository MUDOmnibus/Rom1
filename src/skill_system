/* new system for spell groups */
#define MAX_SPELL_GROUP 10 (max spells in group)

#define GROUP_CREATE    250   /* both */
#define GROUP_DETECT	251
#define GROUP_MALADY	252 
#define GROUP_PROTECT	253
#define GROUP_TRANSPORT	254
#define GROUP_WEATHER	255
#define GROUP_ATTACK	256   /* cleric only */
