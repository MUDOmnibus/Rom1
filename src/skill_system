#define GROUP_CURE	258
#define GROUP_HEAL	259
#define GROUP_NECRO	260
#define GROUP_CHARM	261   /* mage only */
#define GROUP_COMBAT	262
#define GROUP_ENCHANT	263
#define GROUP_ENHANCE	264
#define GROUP_ILLUSION  265
#define GROUP_SUMMON	266

